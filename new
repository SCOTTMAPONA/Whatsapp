  <script>
    // WhatsApp share message and link
    const shareText = encodeURIComponent(
      "Join this exclusive Dating WhatsApp group! Answer a few questions and get your invite ðŸ‘‰"
    ) + "%20" + encodeURIComponent(window.location.href);

    document.getElementById('questionForm').addEventListener('submit', function(e) {
      e.preventDefault();

      // Validation
      const name = document.getElementById('name').value.trim();
      const age = document.getElementById('age').value.trim();
      const gender = document.getElementById('gender').value;
      const interest = document.getElementById('interest').value;
      const errorDiv = document.getElementById('formError');
      errorDiv.style.display = 'none';
      errorDiv.textContent = '';

      if (!name || !age || !gender || !interest) {
        errorDiv.textContent = "Please answer all questions!";
        errorDiv.style.display = 'block';
        return;
      }
      if (isNaN(Number(age)) || Number(age) < 18) {
        errorDiv.textContent = "You must be 18 or older to join.";
        errorDiv.style.display = 'block';
        return;
      }

      // Go to sharing step
      document.getElementById('questionForm').style.display = 'none';
      document.getElementById('shareSection').style.display = 'block';
    });

    // Share logic
    let shareCount = 0;
    const waShareBtn = document.getElementById('waShareBtn');
    const shareCounter = document.getElementById('count');
    const waitMessage = document.getElementById('waitMessage');
    waShareBtn.addEventListener('click', function() {
      // Open WhatsApp share
      window.open('https://wa.me/?text=' + shareText, '_blank');
      if (shareCount < 10) {
        shareCount++;
        shareCounter.textContent = shareCount;
      }
      if (shareCount >= 10) {
        waShareBtn.disabled = true;
        waShareBtn.textContent = "Shared!";
        waShareBtn.style.background = "#b5d1f1";
        waitMessage.style.display = 'block';
      }
    });
  </script>
